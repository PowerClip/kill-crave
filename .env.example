# ============================================
# Configuration environnement - Kill Crave
# ============================================
# Copiez ce fichier en .env.local et remplissez les valeurs réelles
# NE JAMAIS commiter les vraies valeurs dans Git

# ============================================
# SHOPIFY (Storefront API & Webhooks)
# ============================================

# Store domain (sans https://)
VITE_SHOPIFY_STORE_DOMAIN=votre-store.myshopify.com

# Storefront API Access Token (token public pour requêtes frontend)
VITE_SHOPIFY_STOREFRONT_TOKEN=shpat_your_storefront_access_token_here

# Version de l'API Shopify (optionnel, défaut: 2025-01)
VITE_SHOPIFY_API_VERSION=2025-01

# Product handle (nom du produit dans l'URL Shopify)
VITE_SHOPIFY_PRODUCT_HANDLE=kill-crave-spray

# Variant ID du bundle (optionnel, pour sélection par défaut)
VITE_SHOPIFY_BUNDLE_VARIANT_ID=gid://shopify/ProductVariant/1234567890

# Webhook Secret (pour validation HMAC des webhooks Shopify)
# À obtenir depuis: Shopify Admin > Settings > Notifications > Webhooks
SHOPIFY_WEBHOOK_SECRET=shpss_your_webhook_signing_secret_here


# ============================================
# FACEBOOK PIXEL & CAPI
# ============================================

# Facebook Pixel ID (visible dans votre Facebook Events Manager)
VITE_FB_PIXEL_ID=123456789012345

# Facebook Conversion API Token (System User token)
# À créer depuis: Meta Business Suite > Events Manager > Settings > Conversion API
FB_CAPI_TOKEN=EAAB1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZabcdef


# ============================================
# GOOGLE TAG MANAGER
# ============================================

# Google Tag Manager Container ID
VITE_GTM_ID=GTM-XXXXXXX


# ============================================
# ANALYTICS (Vercel KV / Upstash) - LEGACY
# ============================================
# Note: Migration en cours vers Prisma Postgres pour analytics journalières

# Vercel KV URL (Redis-compatible)
KV_URL=rediss://default:xxx@your-instance.upstash.io:6379

# Vercel KV REST API
KV_REST_API_URL=https://your-instance.upstash.io
KV_REST_API_TOKEN=your_token_here
KV_REST_API_READ_ONLY_TOKEN=your_readonly_token_here

# Redis URL (alias pour KV_URL)
REDIS_URL=rediss://default:xxx@your-instance.upstash.io:6379

# Password pour protéger la page /analytics (optionnel)
ANALYTICS_PASSWORD=votre_mot_de_passe_secret


# ============================================
# DATABASE (Prisma Postgres)
# ============================================

# Prisma Postgres Database URL
DATABASE_URL=postgres://user:password@db.prisma.io:5432/postgres?sslmode=require


# ============================================
# SERVEUR (Développement local uniquement)
# ============================================

# Port du serveur local (défaut: 8787)
PORT=8787

# Activer le serveur Node.js local (défaut: false)
ENABLE_SERVER=true


# ============================================
# NOTES
# ============================================

# Variables avec préfixe VITE_* : Exposées côté client (frontend)
# Variables sans préfixe : Uniquement côté serveur (API, webhooks)

# Pour Vercel :
# - Ajoutez toutes ces variables dans Vercel Dashboard > Settings > Environment Variables
# - Redéployez après chaque changement de variable d'environnement

# Pour développement local :
# - Copiez ce fichier en .env.local
# - Remplissez les valeurs réelles
# - Le fichier .env.local est déjà dans .gitignore (ne sera pas commité)
